{
  "manifest_version": 2,

  "name": "Coop Navigator Improved (uOttawa)",
  "description": "Fixes to make the uOttawa Coop Navigator easier to use",
  "version": "0.1",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
      {
          "matches": ["https://nav-coop-sso.uottawa.ca/*"],
          "js": [
            "js/vendor.js", 
            "js/content_script.js"
          ],
          "css": [
            "content.css"
          ]
      }
  ],
  "background": {
    "scripts": ["js/vendor.js", "js/background.js"]
  },
  "permissions": [
    "storage",
    "activeTab"
  ]
}